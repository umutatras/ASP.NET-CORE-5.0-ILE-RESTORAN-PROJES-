@model IEnumerable<RestaturanProje.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Kategori Oluştur</a>
    </p>
    <table class="table table-striped" id="myTable">
        <thead>
            <tr>
                <th>
                    Kategori Adı
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-right:0.5rem"><i class="bi bi-pencil"></i> Düzenle</a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="bi bi-x-circle"></i> Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
@section Scripts{<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json",
            },
        });
    });
</script>}